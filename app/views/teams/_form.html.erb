<div class="row">
  <div class="col-lg-8 col-lg-offset-2">
    <% if @team.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@team.errors.count, "error") %> prohibited this role from being saved:</h2>

          <ul>
            <% @team.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
  </div>
</div>

<div class="col-lg-8 col-lg-offset-2">
  <section class="panel">
    <header class="panel-heading">
      Team Forms
    </header>
    <div class="panel-body">
      <div class="position-center">

        <%= form_for @team, html: {class: 'form-horizontal'} do |f| %>

            <div class="form-group">

              <%= f.label :name, class: 'col-lg-3 col-sm-4 control-label' %>
              <div class="col-lg-9 col-sm-8">
                <%= f.text_field :name, class: 'form-control' %>

              </div>
            </div>

            <div class="form-group">
              <%= f.hidden_field :user_id, value: current_user.id %>
            </div>


            <div class="form-group">
              <div class="col-lg-offset-3 col-lg-10">
                <%= f.submit 'Submit', class: 'btn btn-success' %>
                <%= link_to 'Back', teams_path, class: 'btn btn-info' %>
              </div>
            </div>
        <% end %>
      </div>
    </div>
  </section>

</div>