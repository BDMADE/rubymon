<% provide(:title, 'All Teams') %>
<h1>Listing Teams</h1>

<div><%= link_to 'New Team', new_team_path, class: 'btn btn-md btn-success' %></div>


<br>
<div class="row">
  <div class="col-sm-12">
    <section class="panel">
      <header class="panel-heading">
        Team Table
      </header>
      <div class="panel-body">
        <div class="adv-table">
          <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
            <tr>
              <th>Name</th>
             
              <th>Action 1</th>
              <th>Action 2</th>
              <th>Action 3</th>

            </tr>
            </thead>
            <tbody>
            <% @teams.each do |team| %>
                <tr>
                  <td><%= team.name %></td>
                  
                  <td><%= link_to 'Show', team %></td>
                  <td><%= link_to 'Edit', edit_team_path(team) %></td>
                  <td><%= link_to 'Destroy', team, method: :delete, data: {confirm: 'Are you sure?'} %></td>
                </tr>
            <% end %>
            </tbody>
          </table>

        </div>
      </div>
    </section>
  </div>
</div>